<p id="notice"><%= notice %></p>

<h1>Listing Atividades</h1>

<table>
  <thead>
    <tr>
      <th>Id atividade</th>
      <th>Id evento</th>
      <th>Tipo</th>
      <th>Titulo</th>
      <th>Assunto</th>
      <th>Resumo</th>
      <th>Local</th>
      <th>Datahora inicio</th>
      <th>Datahora fim</th>
      <th>Id participante</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atividades.each do |atividade| %>
      <tr>
        <td><%= atividade.id_atividade %></td>
        <td><%= atividade.id_evento %></td>
        <td><%= atividade.tipo %></td>
        <td><%= atividade.titulo %></td>
        <td><%= atividade.assunto %></td>
        <td><%= atividade.resumo %></td>
        <td><%= atividade.local %></td>
        <td><%= atividade.datahora_inicio %></td>
        <td><%= atividade.datahora_fim %></td>
        <td><%= atividade.id_participante %></td>
        <td><%= link_to 'Show', atividade %></td>
        <td><%= link_to 'Edit', edit_atividade_path(atividade) %></td>
        <td><%= link_to 'Destroy', atividade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

